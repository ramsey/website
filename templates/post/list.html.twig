{% extends 'layout/base.html.twig' %}

{% block body %}
    <div class="relative bg-white">
        <div class="lg:absolute lg:inset-0">
            <div class="lg:sticky lg:inset-y-0 lg:left-0 lg:w-1/2 lg:h-screen">
                <img class="h-56 w-full object-cover lg:absolute lg:h-full" src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3328&q=80" alt="">
            </div>
        </div>
        <div class="relative pt-12 pb-16 px-4 sm:pt-16 sm:px-6 lg:px-8 lg:max-w-7xl 2xl:max-w-full lg:mx-auto lg:grid lg:grid-cols-2">
            <div class="lg:col-start-2 lg:pl-8">
                <main class="text-base max-w-prose mx-auto lg:max-w-lg lg:ml-auto lg:mr-0 2xl:mr-auto 2xl:max-w-3xl">

                    <span class="leading-6 text-indigo-600 font-semibold">Writing</span>
                    <h1 class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl">Blog</h1>

                    <div id="app-main-content" class="mt-5 prose prose-indigo text-gray-500">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec eu nulla consequat, pharetra erat sit amet, congue magna.</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec eu nulla consequat, pharetra erat sit amet, congue magna.</p>
                    </div>

                        <div class="mt-5 border-t border-gray-200">
                            <dl class="divide-y divide-gray-200">
                                {% for post in posts %}
                                    <div class="py-4 py-5 grid grid-cols-4 gap-4">
                                        <dt class="text-md font-medium text-gray-900 col-span-3">
                                            <a href="{{ path('blog_post', {year: post.published.format('Y'), slug: post.slug}) }}" class="text-indigo-600 hover:text-indigo-500">
                                                {{ post.title }}
                                            </a>
                                        </dt>
                                        <dd class="text-sm text-gray-500 text-right mt-0">
                                            {{ post.published|format_date }}
                                        </dd>
                                    </div>
                                {% endfor %}
                            </dl>
                        </div>

                </main>
            </div>
        </div>
    </div>
{% endblock %}
