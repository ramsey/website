{
    "name": "ramsey/website",
    "type": "project",
    "description": "My personal website and blog",
    "keywords": [
        "website",
        "blog"
    ],
    "license": [
        "MIT",
        "CC-BY-4.0"
    ],
    "authors": [
        {
            "name": "Ben Ramsey",
            "email": "ben@benramsey.com",
            "homepage": "https://benramsey.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "fig/http-message-util": "^1.1",
        "laminas/laminas-component-installer": "^2.5.0",
        "laminas/laminas-config-aggregator": "^1.5.0",
        "laminas/laminas-diactoros": "^2.6",
        "laminas/laminas-servicemanager": "^3.4",
        "laminas/laminas-stdlib": "^3.3.1",
        "league/commonmark": "^2.0",
        "mezzio/mezzio": "^3.5.0",
        "mezzio/mezzio-fastroute": "^3.2",
        "mezzio/mezzio-helpers": "^5.6.0",
        "mezzio/mezzio-twigrenderer": "^2.6",
        "middlewares/content-length": "^2.0",
        "middlewares/lowercase": "^1.0",
        "middlewares/trailing-slash": "^2.0",
        "ocramius/package-versions": "^2.3",
        "psr/http-message": "^1.0",
        "ramsey/collection": "^1.1",
        "symfony/finder": "^5.3",
        "symfony/yaml": "^5.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.15",
        "filp/whoops": "^2.7.1",
        "laminas/laminas-development-mode": "^3.3.0",
        "mezzio/mezzio-tooling": "^1.4.0",
        "ramsey/devtools": "^1.7"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "captainhook": {
            "force-install": true
        },
        "laminas": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute",
                "mezzio/mezzio-twigrenderer"
            ]
        },
        "ramsey/conventional-commits": {
            "configFile": "conventional-commits.json"
        },
        "ramsey/devtools": {
            "command-prefix": "dev"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "tests/AppTest/",
            "Ramsey\\Test\\Website\\": "tests/Website/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "clear-config-cache": "php bin/clear-config-cache.php",
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "mezzio": "mezzio --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:9000 -t public/"
        ],
        "serve-docker": [
            "Composer\\Config::disableProcessTimeout",
            "docker build -t benramsey/ramsey-website .",
            "docker run --rm -it -p 9000:8080 -v \"$PWD\":/app benramsey/ramsey-website"
        ]
    }
}
